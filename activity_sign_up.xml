<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/stec"
            />

            <!-- Spacing between logo and inputs -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Name Input -->
            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:padding="12dp"
                android:background="#2196F3" /> <!-- Optional styling -->

            <!-- DU Registration Number Input -->
            <EditText
                android:id="@+id/duRegNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DU Reg. No"
                android:inputType="text"
                android:padding="12dp"
                android:background="#2196F3"
                android:layout_marginTop="16dp" />

            <!-- Department Spinner -->
            <Spinner
                android:id="@+id/departmentSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:entries="@array/department_array" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="#2196F3"
                android:layout_marginTop="16dp" />

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="12dp"
                android:background="#2196F3"
                android:layout_marginTop="16dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:padding="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp" />
            <!-- Return Button -->
            <Button
                android:id="@+id/returnButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:background="@drawable/img"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>