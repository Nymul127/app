<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Profile"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stec"
        android:paddingRight="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Student Panel"
        android:textColor="#363EA8"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingRight="50sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:hint="DU Reg.No"
        android:inputType="text"
        android:padding="12dp"
        android:background="#E2C5C5"
        android:layout_marginRight="18dp"/>
    <Spinner
        android:id="@+id/departmentSpinner"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:entries="@array/semester_name"
        android:spinnerMode="dialog"
        android:background="#7FD383"
        android:layout_marginRight="18dp"/>

    <Button
        android:id="@+id/search"
        android:layout_width="150dp"
        android:layout_height="50dp"
       android:layout_marginRight="12dp"
        android:text="Search"
        android:backgroundTint="#009688"
        android:textColor="#8BC34A"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/rb"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/img"
        android:textColor="#FFEB3B"
        android:layout_marginTop="50dp"/>
</LinearLayout>

